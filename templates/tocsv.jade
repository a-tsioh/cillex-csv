doctype html
html
  head
    // Standard Meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    // Site Properties

    title istex/cillex
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css')
    style(type='text/css').

  body

    .ui.container
      .ui.hidden.divider
      .ui.segment
       
        form.ui.form(target="_self" action="?" method="POST")
         .fields
          .twelve.wide.field
            label requete    
            input(type='text' name='istexq' value="{{url}}")
          .field
            label append
            {% if mode == "PUT" %}
            input.ui.blue.submit.button(type='checkbox' name="append" )
            {% endif %}
            {% if mode == "POST" %}
            input.ui.blue.submit.button(type='checkbox' name="append" checked='checked' )
            {% endif %}
          .field
            label &nbsp;
            input.ui.blue.submit.button(type='submit')

      .ui.hidden.divider
      
      {% if table %}  
      .ui.segment  
        table.ui.celled.table
         thead
          tr
           {% for item in headers %}
           th {{item}}
           {% endfor %}
           
         tbody
          {% for row in rows %}
          tr
            {% for item in row %}
            td {{ item }}
            {% endfor %}
          {% endfor %}
      {% endif %}
